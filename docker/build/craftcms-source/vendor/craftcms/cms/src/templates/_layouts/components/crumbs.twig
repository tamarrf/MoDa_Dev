<div id="crumbs"{% if not crumbs %} class="empty"{% endif %}>
    <button id="nav-toggle" title="{{ 'Show nav'|t('app') }}" aria-label="{{ 'Show nav'|t('app') }}"></button>
    {% if crumbs %}
        <nav aria-label="{{ 'Breadcrumbs'|t('app') }}">
            <ul>
                {% for crumb in crumbs %}
                    <li><a href="{{ crumb.url }}">{{ crumb.label }}</a></li>
                {% endfor %}
            </ul>
        </nav>
    {% endif %}
</div>
