<footer>
	{# dynamically create footer menu items from craft #}
	<div class="footer-container">
		{% set pages = craft.entries()
                    .section('menuPage')
                    .menuLocation('footerMenu')
					.all()%}
        <div class="footer-logos">
            {% set logos = craft.app.globals().getSetByHandle("footer").logos.all() %}
            {% for logo in logos %}
                <a href="{{ logo.logoUrl }}" target="_blank">
                    <img src="{{ logo.url }}" class="footer-logo"></img>
                </a>
            {% endfor %}
        </div>
        <div class="footer-text">
            <div>This material is based upon work supported by the National Science Foundation under grant DRK-12 award 2010413. Any opinions, findings and conclusions or recommendations expressed in this material are those of the authors and do not necessarily reflect the views of the National Science Foundation.</div>
            <br>
            <div>Contact: 
            <a href="mailto:paulob@tc.columbia.edu,tf2464@tc.columbia.edu,awagh@education.mit.edu,mwilkers@berkeley.edu">Email us</a>
            </div>
            {{ craft.app.globals().getSetByHandle("footer").copyrightText }}
            
        </div>
	</div>
</footer>
